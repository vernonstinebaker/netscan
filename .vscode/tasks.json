{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Xcode Project",
            "type": "shell",
            "command": "xcodebuild",
            "args": ["-project", "./netscan.xcodeproj", "-scheme", "netscan"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "xcodebuild",
            "args": ["-project", "./netscan.xcodeproj", "-scheme", "netscan", "clean"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
